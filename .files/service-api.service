[Unit]
Description=Service application
After=network.target
Wants=network.target

[Service]
Type=exec
User=
Group=
ExecStart=/bin/bash -c 'cd /root/service_app && /root/.local/bin/uv run gunicorn app.main:app -w 4 -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:8010'
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=service_app-app

[Install]
WantedBy=multi-user.target